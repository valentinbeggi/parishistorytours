          <button id="next-gallery" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-white/80 hover:bg-white rounded-full p-2 shadow-lg transition-all duration-200">
            <svg class="w-5 h-5 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          
          <!-- Indicateurs -->
          <div class="flex justify-center mt-4 space-x-2" id="gallery-indicators">
            <button class="w-3 h-3 rounded-full bg-gray-800 transition-all duration-200" data-index="0"></button>
