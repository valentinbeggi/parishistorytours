        <img src="/photos/left_bank/Paris_WW2_resistance.webp" alt="Resistance memorial" class="rounded-lg shadow-md w-full h-48 object-cover hover:scale-105 transition-transform duration-300" />
        <img src="/photos/left_bank/Paris_WW2_tour_guided_group_photo_2.webp" alt="Another group photo" class="rounded-lg shadow-md w-full h-48 object-cover hover:scale-105 transition-transform duration-300" />
        <img src="/photos/left_bank/Paris_WW2_tour_guided_group_photo_3.webp" alt="Group enjoying the tour" class="rounded-lg shadow-md w-full h-48 object-cover hover:scale-105 transition-transform duration-300" />
      </div>

      <!-- Mobile Version - Carrousel -->
      <div class="md:hidden">
        <div class="relative max-w-sm mx-auto">
          <div class="overflow-hidden rounded-xl">
            <div class="flex transition-transform duration-300 ease-in-out" id="gallery-carousel">
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_WW2_bullet_holes_2.webp" alt="Bullet holes from the war" class="rounded-lg shadow-md w-full h-64 object-cover" />
              </div>
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_WW2_german_attack.webp" alt="German attack on Paris" class="rounded-lg shadow-md w-full h-64 object-cover" />
              </div>
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_ww2_group_photo.webp" alt="Tour group photo" class="rounded-lg shadow-md w-full h-64 object-cover" />
              </div>
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_WW2_guide.webp" alt="Your guide Clément" class="rounded-lg shadow-md w-full h-64 object-cover" />
              </div>
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_WW2_last_stop.webp" alt="Final stop of the tour" class="rounded-lg shadow-md w-full h-64 object-cover" />
              </div>
              <div class="min-w-full">
                <img src="/photos/left_bank/Paris_WW2_resistance.webp" alt="Resistance memorial" class="rounded-lg shadow-md w-full h-64 object-cover" />
